<p>
  <label for="settings_default_project_id"><%= l("diary.default_project") %></label>
  <%-
    projects = Project.active
    selected = (Project.find(settings['default_project_id']) rescue nil)
    options = content_tag(:option, "-", :value => "") + project_tree_options_for_select(projects, :selected => selected)
  %>
  <%= select_tag "settings[default_project_id]", options %>
</p>
<p>
  <label for="settings_days_threshold"><%= l("diary.days_threshold") %></label>
  <%= text_field_tag "settings[days_threshold]", settings['days_threshold'], :size => 3 %>
</p>
<p><%= l("diary.days_threshold_description") %></p>
